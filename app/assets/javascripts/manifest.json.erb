<% icon_sizes = Rails.configuration.serviceworker.icon_sizes %>
{
  "name": "My Hospital",
  "short_name": "MyHospital",
  "theme_color": "#b3e5fc",
  "background_color": "#82b3c9",
  "display": "fullscreen",
  "orientation": "portrait",
  "start_url": "https://radiant-forest-88745.herokuapp.com/",
  "icons": [
  <% icon_sizes.map { |s| "#{s}x#{s}" }.each.with_index do |dim, i| %>
    {
      "src": "<%= image_path "serviceworker-rails/heart-#{dim}.png" %>",
      "sizes": "<%= dim %>",
      "type": "image/png"
    }<%= i == (icon_sizes.length - 1) ? '' : ',' %>
  <% end %>
  ]
}
