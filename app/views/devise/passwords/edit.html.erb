<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>
  <div class="card">
    <div class="card-action card_action_title">
      <span class="card-title white-text">Change my password</span>
      <div class="actions white-text waves-effect waves-light btn right action_button_card action_button_card_first_right">
        <%= f.submit "Send" %>
      </div>
    </div>
    <div class="card-content">
      <div class="row">
        <div class="col s12">
          <div class= "striped input-field col s12 m6">
            <%= f.label :password, "New password" %><br />
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em><br />
            <% end %>
          </div>
          <div class="striped input-field col s12 m6">
            <%= f.label :password_confirmation, "Confirm new password" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off" %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  <%= render "devise/shared/links" %>
