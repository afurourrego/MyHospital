<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="col s12 m6 offset-m3">
    <div class="card">
      <div class="card-action card_action_title">
        <span class="card-title white-text"><b>Password</b></span>
        <div class="actions white-text waves-effect waves-light btn right action_button_card action_button_card_first_right">
          <%= f.submit 'RESEND' %>
        </div>
      </div>
      <div class="card-content">
        <div class="row">
          <div class="col s12 m10 offset-m1">

            <div class="input-field">
              <%= f.label :email %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
