<div class="col s12 m6">
  <div class="card">
    <div class="card_action card_action_title">
      <span class="card-title white-text"><b>EPS</b></span>
      <div class="waves-effect waves-light btn right action_button_card action_button_card_first_right">
        <%= link_to 'NEW', new_ep_path, class: 'btn_link_to' %>
      </div>
    </div>
    <div class="card-content">
      <div class="row card_content_row">
        <div class="col s12 search_box">
          <%= form_tag nil, method: :get do %>
            <div class="striped input-field col s12 m6 l6 no_border">
              <%= text_field_tag 'name_eps', params[:name_eps] %>
              <%= label_tag :name_eps, 'Name'%>
            </div>
            <%= button_tag :button, type: :submit, class: 'button_search waves-effect waves-light btn right col s12 m2 l2' do %>
            <%= t("share.search") %>
            <% end %>
          <% end %>
        </div>
        <div class="scrollable col s12">
          <table>
            <thead>
              <tr>
                <th>Name</th>
                <th>Active</th>
                <th colspan="2"></th>
              </tr>
            </thead>

            <tbody>
              <% @eps.each do |ep| %>
                <tr>
                  <td><%= ep&.name&.titleize %></td>
                  <td>
                    <% if ep&.active %>
                      <i class="material-icons">check</i>
                    <% else %>
                      <i class="material-icons">close</i>
                    <% end %>
                  </td>
                  <td>
                    <% if can? :update, Arl %>
                      <%= link_to edit_ep_path(ep) do %>
                        <i class="material-icons">edit</i>
                      <% end %>
                    <% end %>
                  </td>
                  <td>
                    <% if can? :destroy, Arl %>
                      <%= link_to ep, method: :delete, data: { confirm: "Â¿Esta seguro de elminarlo?" } do %>
                        <i class="material-icons">delete</i>
                      <% end %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
