<%= form_with(model: [@appointment, order], local: true) do |form| %>
  <% if order.errors.any? %>
    <div id="error_explanation">
      <h2>
        <% if order.errors.count == 1 %>
          <%= order.errors.count %> <%= "Error prohibited this User from being saved:" %>
        <% else %>
          <%= "#{order.errors.count} Errors prohibited this User from being saved:" %>
        <% end %>
      </h2>
      <ul>
        <% order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="card">
    <div class="card-action card_action_title">
      <span class="card-title white-text">ARL</span>
      <div class="waves-effect waves-light btn right action_button_card action_button_card_first_right">
        <%= form.submit 'SAVE', class: 'btn_link_to' %>
      </div>

      <div class="waves-effect waves-light btn right action_button_card">
        <%= link_to 'BACK', @appointment, class: 'btn_link_to' %>
      </div>
    </div>
    <div class="card-content">
      <div class="row">
        <div class="col s12 m10 offset-m1">

          <div class="input-field col s12 m6">
            <%= form.collection_select :type_order, Order.type_orders, :first, ->(type_order) { type_order.first.titleize }, { include_blank: 'None Selected'} %>
            <%= form.label :type_order, 'Type', class: 'active' %>
          </div>

          <div class="input-field col s12">
            <%= form.label :description, 'Description' %>
            <%= form.text_field :description %>
          </div>

        </div>
      </div>
    </div>
  </div>
<% end %>
