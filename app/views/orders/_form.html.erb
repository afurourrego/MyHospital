<%= form_with(model: [@appointment, order], local: true) do |form| %>
  <% if order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
        <% order.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :doctor_id %>
    <%= form.number_field :doctor_id %>
  </div>

  <div class="field">
    <%= form.label :patient_id %>
    <%= form.number_field :patient_id %>
  </div>

  <div class="field">
    <%= form.label :appointment_id %>
    <%= form.number_field :appointment_id %>
  </div>

  <div class="input-field col s12 m6">
    <%= form.collection_select :type_order, Order.type_orders, :first, ->(type_order) { type_order.first.titleize }, { include_blank: 'None Selected'} %>
    <%= form.label :type_order, 'Type', class: 'active' %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
