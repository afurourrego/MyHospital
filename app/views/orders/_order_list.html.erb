<div class="col s12 no_border">
  <div class="card">
    <div class="card_action card_action_title">
      <span class="card-title white-text"><b>Orders</b></span>
      <div class="waves-effect waves-light btn right action_button_card action_button_card_first_right">
        <%= link_to 'NEW', new_appointment_order_path(@appointment), class: 'btn_link_to' %>
      </div>
    </div>
    <div class="card-content">
      <div class="row card_content_row">

        <div class="scrollable col s12">
          <table>
            <thead>
              <tr>
                <th>Type</th>
                <th>Description</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @orders.each do |order| %>
                <tr>
                  <td><%= order&.type_order %></td>
                  <td><%= order&.description %></td>
                  <td>
                    <% if can? :show, Order %>
                      <%= link_to appointment_order_path(@appointment, order) do %>
                        <i class="material-icons">pageview</i>
                      <% end %>
                    <% end %>
                  </td>
                  <td>
                    <% if can? :update, Order %>
                      <%= link_to edit_appointment_order_path(@appointment, order) do %>
                        <i class="material-icons">edit</i>
                      <% end %>
                    <% end %>
                  </td>
                  <td>
                    <% if can? :destroy, Order %>
                      <%= link_to appointment_order_path(@appointment, order), method: :delete, data: { confirm: "Â¿Esta seguro de elminarlo?" } do %>
                        <i class="material-icons">delete</i>
                      <% end %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
