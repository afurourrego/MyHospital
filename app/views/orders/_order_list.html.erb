<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.type_order %></td>
        <td><%= order.description %></td>
        <td><%= link_to 'Show', appointment_order_path(@appointment, order) %></td>
        <td><%= link_to 'Edit', edit_appointment_order_path(@appointment, order) %></td>
        <td><%= link_to 'Destroy', appointment_order_path(@appointment, order), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order', new_appointment_order_path(@appointment) %>
