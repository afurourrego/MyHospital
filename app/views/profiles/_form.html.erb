<%= form_with(model: profile, local: true) do |form| %>
  <% if profile.errors.any? %>
    <div id="error_explanation">
      <h2>
        <% if profile.errors.count == 1 %>
          <%= profile.errors.count %> <%= "Error prohibited this User from being saved:" %>
        <% else %>
          <%= "#{profile.errors.count} Errors prohibited this User from being saved:" %>
        <% end %>
      </h2>
      <ul>
        <% profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="card">
    <div class="card-action card_action_title">
      <span class="card-title white-text">Patient</span>
      <div class="waves-effect waves-light btn right action_button_card action_button_card_first_right">
        <%= form.submit 'SAVE', class: 'btn_link_to' %>
      </div>

      <div class="waves-effect waves-light btn right action_button_card">
        <%= link_to 'BACK', profiles_path, class: 'btn_link_to' %>
      </div>
    </div>
    <div class="card-content">
      <div class="row">
        <div class="col s12 m10 offset-m1">

          <div class="input-field col s12 m4">
            <%= form.label :identification_card, 'Identification Card' %>
            <%= form.text_field :identification_card %>
          </div>

          <div class="input-field col s12 m4">
            <%= form.label :full_name, 'Full Name' %>
            <%= form.text_field :full_name %>
          </div>

          <div class="input-field col s12 m4">
            <%= form.label :email, 'Email' %>
            <%= form.text_field :email %>
          </div>

          <div class="input-field col s12 m4">
            <%= form.label :phone, 'Phone' %>
            <%= form.number_field :phone %>
          </div>

          <div class="input-field col s12 m4">
            <%= form.label :birthday_date, 'Birthday' %>
            <%= form.text_field :birthday_date, value: "#{profile&.birthday&.strftime("%b %-e, %Y")}", class: "datepicker datepicker-date" %>
          </div>

          <div class="input-field col s12 m4">
            <%= form.label :eps, 'EPS' %>
            <%= form.number_field :eps %>
          </div>

          <div class="input-field col s12 m4">
            <%= form.label :address, 'Address' %>
            <%= form.text_field :address %>
          </div>

          <div class="input-field col s12 m4">
            <%= form.label :city, 'City' %>
            <%= form.text_field :city %>
          </div>

          <div class="input-field col s12 m4">
            <%= form.label :arl, 'ARL' %>
            <%= form.number_field :arl %>
          </div>

          <div class="input-field col s12 m4">
            <%= form.collection_select :rh, Profile.rhs, :first, ->(rh) { rh.first } %>
            <%= form.label :rh, 'RH', class: 'active' %>
          </div>

          <div class="input-field col s12 m8">
            <%= form.label :disability, 'Disability' %>
            <%= form.text_field :disability %>
          </div>

          <div class="input-field col s12">
            <%= form.label :allergies, 'Allergies' %>
            <%= form.text_field :allergies %>
          </div>

          <div class="input-field col s12">
            <%= form.label :notes, 'Notes' %>
            <%= form.text_field :notes %>
          </div>

        </div>
      </div>
    </div>
  </div>
<% end %>
